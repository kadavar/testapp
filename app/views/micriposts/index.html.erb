<p id="notice"><%= notice %></p>

<h1>Listing Micriposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micriposts.each do |micripost| %>
      <tr>
        <td><%= micripost.content %></td>
        <td><%= micripost.user_id %></td>
        <td><%= link_to 'Show', micripost %></td>
        <td><%= link_to 'Edit', edit_micripost_path(micripost) %></td>
        <td><%= link_to 'Destroy', micripost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micripost', new_micripost_path %>
